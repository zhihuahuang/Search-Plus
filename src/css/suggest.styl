/**
* Suggest
*/
.suggest-list {
    display: flex;
    padding: 0 8px 8px 0;
    overflow: hidden;
    flex-wrap: wrap;
    justify-content: center;
    border-radius: 8px;
    background-color: rgba(0, 0, 0, 0.382);
    
    user-select: none;
}

.suggest {
    flex: none;
    display: inline-block;
    margin: 8px 0 0 8px;
    padding: 4px;
    line-height: 20px;
    font-size: 14px;
    border-radius: 4px;
    background-color: #f7f7f7;
    cursor: pointer;
    
    @media screen and (max-width: 600px) {
        font-size: 12px;
    }
}

.suggest:before,
.suggest:after {
    vertical-align: top;
    font-size: 12px;
    color: #fff;
    border-radius: 4px;
}

.suggest:before {
    content: attr(data-key-name);
    margin-right: 4px;
    display: inline-block;
    width: 14px;
    height: 14px;
    line-height: 14px;
    border-style: solid;
    border-width: 2px 3px 4px;
    border-color: #575757 #505050 #474747;
    border-radius: 4px;
    color: #e7e7e7;
    font-size: 12px;
    text-align: center;
    opacity: 0.9;
    background: #575757;
    
    @media screen and (max-width: 600px) {
        display: none; /* 移动端不显示快捷键 */
    }
}

.suggest-list.active .suggest:before {
    border-width: 1px 3px 5px;
    opacity: 1;
    background: #606060;
}

.suggest.keydown:before {
    border-width: 2px 3px 4px;
    color: #a0a0a0;
    background: #575757;
}

.suggest:after {
    margin-left: 4px;
    padding: 4px;
    background: #f64014;
    opacity: 0.85;
}

.suggest-baidu:after {
    content: "Baidu";
    background-color: #3385ff;
}

.suggest-360:after {
    content: "360";
    background-color: #19b955;
}

.suggest-sogou:after {
    content: "Sogou";
    background: #f64014;
}